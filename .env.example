# Configuración del Chatbot Educativo
# Copia este archivo a .env y ajusta los valores según tus necesidades

# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración del chatbot
CHATBOT_NAME=Asistente Educativo
CHATBOT_WELCOME_MESSAGE=¡Hola! Soy tu asistente educativo. ¿En qué puedo ayudarte hoy?
CHATBOT_TYPING_SPEED=50
CHATBOT_RESPONSE_DELAY=1000

# Configuración de la base de datos (futuro)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=chatbot_db
# DB_USER=username
# DB_PASSWORD=password

# Configuración de APIs externas (futuro)
# OPENAI_API_KEY=your_openai_api_key_here
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/chatbot.log

# Configuración de seguridad
SESSION_SECRET=your_session_secret_here
CORS_ORIGIN=http://localhost:3000 