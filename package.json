{
  "name": "chat-bot-curso-ia",
  "version": "1.0.0",
  "description": "Chatbot educativo inteligente para proporcionar una experiencia educativa interactiva y personalizada",
  "main": "index.js",
  "scripts": {
    "start": "live-server src --port=3000 --open=/index.html",
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass src/styles/main.scss:dist/css/main.css --style compressed",
    "build:js": "webpack --mode production",
    "dev": "npm run build:css -- --watch & npm run build:js -- --watch",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "clean": "rimraf dist",
    "serve": "http-server dist -p 8080 -o"
  },
  "keywords": [
    "chatbot",
    "educativo",
    "ia",
    "inteligencia-artificial",
    "javascript",
    "html5",
    "css3",
    "responsive",
    "web"
  ],
  "author": "Tu Nombre <tu-email@ejemplo.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/chat-bot-curso-ia.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/chat-bot-curso-ia/issues"
  },
  "homepage": "https://github.com/tu-usuario/chat-bot-curso-ia#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "babel-loader": "^9.1.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
} 